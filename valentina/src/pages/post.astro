---
//Data fetching
const response = await fetch('https://jsonplaceholder.typicode.com/posts')
const posts = await response.json()
//console.log(data)
---

<h1>publicaciones</h1>
<style>
    .title{
        color: salmon;
    }
</style>

{
    posts.map((post) => (
        <div>
            <h5>{post.userId}</h5>
            <h3 class="title">{post.title}</h3>
            <p style="color: #350">{post.body}</p>    
        </div>
    ))
}
